{
  "name": "snake-zone-api",
  "version": "1.0.0",
  "description": "Multiplayer Snake Zone game with real-time communication",
  "scripts": {
    "zip-build": "node script/zip-build.mjs",
    "start-client": "cd client && npm run dev",
    "build-client": "cd client && npm run build && cd .. && npm run zip-build",
    "build-client-prod": "cd client && build-prod && cd .. && npm run zip-build",
    "start-server": "node server/server.js",
    "kill-dev": "npx kill-port 9000 5174",
    "dev": "npm run kill-dev && concurrently \"nodemon server/server.js\" \"npm run start-client\"",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs snake-zone-server",
    "pm2:monit": "pm2 monit",
    "pm2:dev": "pm2 start ecosystem.config.js --env development",
    "pm2:prod": "pm2 start ecosystem.config.js --env production",
    "docker:build": "docker build -t snake-zone-server .",
    "docker:run": "docker run -p 9000:9000 --name snake-zone-container snake-zone-server",
    "docker:stop": "docker stop snake-zone-container",
    "docker:remove": "docker rm snake-zone-container",
    "docker:logs": "docker logs snake-zone-container",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "compose:logs": "docker-compose logs -f",
    "compose:build": "docker-compose build",
    "compose:prod": "docker-compose --profile production up -d",
    "deploy:staging": "pm2 deploy ecosystem.config.js staging",
    "deploy:production": "pm2 deploy ecosystem.config.js production",
    "test:bandwidth": "node server/run-bandwidth-test.js",
    "test:server": "node server/simple-test-server.js",
    "test:client": "node server/test-client.js",
    "test:quick": "node server/run-simple-test.js",
    "test:simple": "node server/simple-test-server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pm2": "^5.3.0",
    "socket.io": "^4.8.1",
    "socket.io-msgpack-parser": "^3.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "concurrently": "^9.2.0",
    "nodemon": "^3.0.1",
    "zip-a-folder": "^3.1.9"
  },
  "keywords": [
    "multiplayer",
    "game",
    "websocket",
    "realtime"
  ],
  "author": ""
}
