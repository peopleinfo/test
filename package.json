{
  "name": "snake-zone-api",
  "version": "1.0.0",
  "description": "Multiplayer Snake Zone game with real-time communication",
  "scripts": {
    "zip-build": "node script/zip-build.mjs",
    "start-client": "cd client && npm run dev",
    "build-client": "cd client && npm run build && cd .. && npm run zip-build",
    "build-client-prod": "cd client && build-prod && cd .. && npm run zip-build",
    "start-server-prod": "node dist-server/server.js",
    "start-server": "node server/server.js",
    "build-server": "node script/build.js",
    "kill-dev": "npx kill-port 9000 5174",
    "dev": "npm run kill-dev && concurrently \"nodemon server/server.js\" \"npm run start-client\"",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "compose:logs": "docker-compose logs -f",
    "compose:build": "docker-compose build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "msgpackr": "^1.11.5",
    "msgpackr-extract": "^3.0.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "socket.io-msgpack-parser": "^3.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "concurrently": "^9.2.0",
    "esbuild": "^0.25.10",
    "nodemon": "^3.0.1",
    "zip-a-folder": "^3.1.9"
  },
  "keywords": [
    "multiplayer",
    "game",
    "websocket",
    "realtime"
  ],
  "author": ""
}
